{
  "name": "nishuuu-themes",
  "displayName": "Nishuuu Themes",
  "description": "Beautiful dark themes with 4 primary color schemes (Teal, Ocean, Palenight, Graphene), dynamic accent colors with color dot previews, folder icon sync, and enhanced styling. 8 clean, focused themes.",
  "version": "2.0.0",
  "icon": "icon.png",
  "publisher": "taraldinn",
  "author": {
    "name": "Nishuuu",
    "email": "your-email@example.com"
  },
  "license": "MIT",
  "galleryBanner": {
    "color": "#0A0A0A",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taraldinn/nishuuu-themes.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "dark theme",
    "ui",
    "icons",
    "file icons",
    "folder icons",
    "syntax highlighting",
    "accent color",
    "customizable",
    "italic",
    "bold",
    "font styling",
    "tara",
    "nishuuu",
    "carbon",
    "graphene",
    "ocean",
    "teal",
    "palenight",
    "deepforest",
    "webstrom",
    "custom theme"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "title": "Nishuuu Themes",
      "properties": {
        "nishuuu.accent": {
          "type": "string",
          "default": "teal",
          "description": "Changes the accent color of the theme",
          "enum": [
            "teal",
            "ocean", 
            "palenight",
            "graphene",
            "blue",
            "cyan",
            "lime",
            "purple",
            "orange",
            "pink",
            "yellow",
            "white"
          ],
          "enumDescriptions": [
            "ðŸŸ¢ Teal - vibrant teal accent (#80CBC4)",
            "ðŸ”µ Ocean - deep blue accent (#6EBAD7)", 
            "ðŸŸ£ Palenight - purple accent (#A178C4)",
            "âšª Graphene - clean blue accent (#6A90D0)",
            "ðŸ”· Blue - classic blue accent (#5393FF)",
            "ðŸŸ¦ Cyan - pure cyan blue (#64FFDA)",
            "ðŸŸ¢ Lime - fresh lime green (#C6FF00)",
            "ðŸŸ£ Purple - rich purple accent (#B54DFF)",
            "ðŸŸ  Orange - bright orange accent (#FF7042)",
            "ðŸ©· Pink - vibrant pink accent (#FF669E)",
            "ðŸŸ¡ Yellow - golden yellow accent (#FFCF3D)",
            "âšª White - clean white accent (#FFFFFF)"
          ]
        },
        "nishuuu.customAccent": {
          "type": "string",
          "default": "",
          "description": "Use a custom accent color (hex format like #80CBC4). Overrides the accent setting when provided.",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        },
        "nishuuu.outlinedIcons": {
          "type": "boolean",
          "default": false,
          "description": "Use outlined folder icons instead of filled ones"
        },
        "nishuuu.tabIndicator": {
          "type": "string",
          "default": "none",
          "description": "Style of the active tab indicator",
          "enum": [
            "none",
            "fill"
          ],
          "enumDescriptions": [
            "None - no visual indicator (clean look)",
            "Fill - subtle background color for active tab"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "nishuuu.selectAccentColor",
        "title": "Select Accent Color",
        "category": "Nishuuu Themes"
      },
      {
        "command": "nishuuu.resetAccentColor",
        "title": "Reset Accent Color",
        "category": "Nishuuu Themes"
      },
      {
        "command": "nishuuu.toggleOutlinedIcons",
        "title": "Toggle Outlined Icons",
        "category": "Nishuuu Themes"
      }
    ],
    "themes": [
      {
        "label": "Tara Teal",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-teal.json"
      },
      {
        "label": "Tara Teal High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-teal-high-contrast.json"
      },
      {
        "label": "Tara Ocean",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-ocean.json"
      },
      {
        "label": "Tara Ocean High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-ocean-high-contrast.json"
      },
      {
        "label": "Tara Palenight",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-palenight.json"
      },
      {
        "label": "Tara Palenight High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-palenight-high-contrast.json"
      },
      {
        "label": "Tara Graphene",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-graphene.json"
      },
      {
        "label": "Tara Graphene High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-graphene-high-contrast.json"
      }
    ],
    "iconThemes": [
      {
        "id": "tara-icons-teal",
        "label": "Tara Icons Teal",
        "path": "./themes/tara-icons-teal.json"
      },
      {
        "id": "tara-icons-ocean",
        "label": "Tara Icons Ocean",
        "path": "./themes/tara-icons-ocean.json"
      },
      {
        "id": "tara-icons-palenight",
        "label": "Tara Icons Palenight",
        "path": "./themes/tara-icons-palenight.json"
      },
      {
        "id": "tara-icons-graphene",
        "label": "Tara Icons Graphene",
        "path": "./themes/tara-icons-graphene.json"
      },
      {
        "id": "tara-icons-dynamic",
        "label": "Tara Icons Dynamic (Auto-generated)",
        "path": "./themes/tara-icons-dynamic.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "echo \"No compilation needed\"",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.2.0"
  }
}