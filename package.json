{
  "name": "nishuuu-themes",
  "displayName": "Nishuuu Themes",
  "description": "Beautiful dark themes based on Vira with dynamic accent colors and comprehensive UI integration",
  "version": "3.1.0-vira-style",
  "icon": "icon.png",
  "publisher": "taraldinn",
  "author": {
    "name": "Taraldinn",
    "email": "your-email@example.com"
  },
  "license": "MIT",
  "galleryBanner": {
    "color": "#0A0A0A",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taraldinn/nishuuu-themes.git"
  },
  "bugs": {
    "url": "https://github.com/taraldinn/nishuuu-themes/issues"
  },
  "homepage": "https://github.com/taraldinn/nishuuu-themes#readme",
  "keywords": [
    "theme",
    "dark",
    "vira",
    "tara",
    "accent",
    "color",
    "dynamic",
    "icon",
    "status bar",
    "ui",
    "syntax"
  ],
  "categories": [
    "Themes"
  ],
  "engines": {
    "vscode": "^1.95.0"
  },
  "main": "./src/index.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Nishuuu Themes",
      "properties": {
        "nishuuuTheme.accent": {
          "order": 1,
          "type": "string",
          "default": "Teal",
          "enum": [
            "Lime",
            "Blue",
            "Cyan",
            "Bright Teal",
            "Indigo",
            "Teal",
            "Purple",
            "Neon Lime",
            "Vira",
            "Tomato",
            "Pink",
            "Orange",
            "Yellow",
            "White"
          ],
          "description": "Set the accent color used across the interface and icons.",
          "scope": "window"
        },
        "nishuuuTheme.customAccent": {
          "order": 2,
          "type": "string",
          "markdownDescription": "The custom accent **will override** the accent color. Run clear accent command or manually remove the value.",
          "scope": "window",
          "pattern": "^$|^#([A-Fa-f0-9]{6})$",
          "patternErrorMessage": "Invalid color format. Enter a valid 6 digits hex color."
        },
        "nishuuuTheme.useOutlinedIcons": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Use outlined folder icons.",
          "scope": "window"
        },
        "nishuuuTheme.useTopTabIndicator": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Put the current tab indicator at the top instead of the bottom.",
          "scope": "window"
        },
        "nishuuuTheme.showBorders": {
          "type": "boolean",
          "default": false,
          "scope": "window",
          "markdownDescription": "Show borders in some area of the editor"
        },
        "nishuuuTheme.contrastedTabs": {
          "type": "boolean",
          "default": false,
          "scope": "window",
          "markdownDescription": "Add more contrast to tabs by using a different background for the tabs bar"
        },
        "nishuuuTheme.solidLineHighlight": {
          "type": "boolean",
          "default": false,
          "scope": "window",
          "markdownDescription": "Render a solid background highlight for the active line instead of a border"
        },
        "nishuuuTheme.hidesExplorerArrows": {
          "type": "boolean",
          "default": true,
          "scope": "window",
          "markdownDescription": "Hide arrow icons in the file explorer."
        },
        "nishuuuTheme.hidesShadows": {
          "type": "boolean",
          "default": false,
          "scope": "window",
          "markdownDescription": "Hide shadows across the interface for a completely flat look."
        }
      }
    },
    "commands": [
      {
        "command": "nishuuuTheme.switchAccent",
        "title": "Switch Accent Color",
        "category": "Nishuuu Themes",
        "icon": "$(paintbrush)"
      },
      {
        "command": "nishuuuTheme.clearAccent",
        "title": "Clear Accent Color",
        "category": "Nishuuu Themes",
        "icon": "$(clear-all)"
      },
      {
        "command": "nishuuuTheme.testIcons",
        "title": "Test Folder Icons",
        "category": "Nishuuu Themes",
        "icon": "$(folder-opened)"
      }
    ],
    "themes": [
      {
        "label": "Tara Carbon",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-carbon.json"
      },
      {
        "label": "Tara Carbon High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-carbon-high-contrast.json"
      },
      {
        "label": "Tara Deepforest",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-deepforest.json"
      },
      {
        "label": "Tara Deepforest High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-deepforest-high-contrast.json"
      },
      {
        "label": "Tara Graphene",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-graphene.json"
      },
      {
        "label": "Tara Graphene High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-graphene-high-contrast.json"
      },
      {
        "label": "Tara Ocean",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-ocean.json"
      },
      {
        "label": "Tara Ocean High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-ocean-high-contrast.json"
      },
      {
        "label": "Tara Palenight",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-palenight.json"
      },
      {
        "label": "Tara Palenight High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-palenight-high-contrast.json"
      },
      {
        "label": "Tara Teal",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-teal.json"
      },
      {
        "label": "Tara Teal High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-teal-high-contrast.json"
      }
    ],
    "iconThemes": [
      {
        "id": "tara-icons-carbon",
        "label": "Tara Icons Carbon",
        "path": "./themes/tara-icons-carbon.json"
      },
      {
        "id": "tara-icons-deepforest",
        "label": "Tara Icons Deepforest",
        "path": "./themes/tara-icons-deepforest.json"
      },
      {
        "id": "tara-icons-graphene",
        "label": "Tara Icons Graphene",
        "path": "./themes/tara-icons-graphene.json"
      },
      {
        "id": "tara-icons-ocean",
        "label": "Tara Icons Ocean",
        "path": "./themes/tara-icons-ocean.json"
      },
      {
        "id": "tara-icons-palenight",
        "label": "Tara Icons Palenight",
        "path": "./themes/tara-icons-palenight.json"
      },
      {
        "id": "tara-icons-teal",
        "label": "Tara Icons Teal",
        "path": "./themes/tara-icons-teal.json"
      }
    ]
  },
  "scripts": {
    "package": "vsce package"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.0"
  }
}
