{
  "name": "nishuuu-themes",
  "displayName": "Nishuuu Themes",
  "description": "Beautiful dark themes based on Vira with 6 primary colors (Carbon, Deepforest, Graphene, Ocean, Palenight, Teal), dynamic accent colors with icon previews, and status bar integration. 12 clean, focused themes.",
  "version": "3.0.2",
  "icon": "icon.png",
  "publisher": "taraldinn",
  "author": {
    "name": "Nishuuu",
    "email": "your-email@example.com"
  },
  "license": "MIT",
  "galleryBanner": {
    "color": "#0A0A0A",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taraldinn/nishuuu-themes.git"
  },
  "bugs": {
    "url": "https://github.com/taraldinn/nishuuu-themes/issues"
  },
  "homepage": "https://github.com/taraldinn/nishuuu-themes#readme",
  "keywords": [
    "theme",
    "dark",
    "vira",
    "tara",
    "accent",
    "color",
    "dynamic",
    "icon",
    "status bar",
    "ui",
    "syntax"
  ],
  "categories": [
    "Themes"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "main": "./src/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Nishuuu Themes",
      "properties": {
        "nishuuu.accent": {
          "type": "string",
          "default": "teal",
          "description": "Select accent color for the theme",
          "enum": [
            "teal",
            "vira",
            "cyan",
            "blue",
            "indigo",
            "purple",
            "pink",
            "tomato",
            "orange",
            "yellow",
            "acid-lime",
            "lime",
            "bright-teal",
            "white"
          ],
          "enumDescriptions": [
            "$(circle-filled) Teal - vibrant teal accent (#80CBC4)",
            "$(circle-filled) Vira - signature vira color (#6C63FF)",
            "$(circle-filled) Cyan - pure cyan blue (#64FFDA)",
            "$(circle-filled) Blue - classic blue accent (#5393FF)",
            "$(circle-filled) Indigo - deep indigo (#3F51B5)",
            "$(circle-filled) Purple - rich purple accent (#B54DFF)",
            "$(circle-filled) Pink - vibrant pink accent (#FF669E)",
            "$(circle-filled) Tomato - bright tomato red (#FF6347)",
            "$(circle-filled) Orange - bright orange accent (#FF7042)",
            "$(circle-filled) Yellow - golden yellow accent (#FFCF3D)",
            "$(circle-filled) Acid Lime - electric lime (#C6FF00)",
            "$(circle-filled) Lime - fresh lime green (#32CD32)",
            "$(circle-filled) Bright Teal - electric teal (#1DE9B6)",
            "$(circle-filled) White - clean white accent (#FFFFFF)"
          ]
        },
        "nishuuu.customAccent": {
          "type": "string",
          "default": "",
          "description": "Use a custom accent color (hex format like #80CBC4). Overrides the accent setting when provided.",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        }
      }
    },
    "commands": [
      {
        "command": "nishuuu.selectAccentColor",
        "title": "Select Accent Color",
        "category": "Nishuuu Themes"
      }
    ],
    "themes": [
      {
        "label": "Tara Carbon",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-carbon.json"
      },
      {
        "label": "Tara Carbon High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-carbon-high-contrast.json"
      },
      {
        "label": "Tara Deepforest",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-deepforest.json"
      },
      {
        "label": "Tara Deepforest High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-deepforest-high-contrast.json"
      },
      {
        "label": "Tara Graphene",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-graphene.json"
      },
      {
        "label": "Tara Graphene High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-graphene-high-contrast.json"
      },
      {
        "label": "Tara Ocean",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-ocean.json"
      },
      {
        "label": "Tara Ocean High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-ocean-high-contrast.json"
      },
      {
        "label": "Tara Palenight",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-palenight.json"
      },
      {
        "label": "Tara Palenight High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-palenight-high-contrast.json"
      },
      {
        "label": "Tara Teal",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-teal.json"
      },
      {
        "label": "Tara Teal High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/tara-teal-high-contrast.json"
      }
    ],
    "iconThemes": [
      {
        "id": "tara-icons-carbon",
        "label": "Tara Icons Carbon",
        "path": "./themes/tara-icons-carbon.json"
      },
      {
        "id": "tara-icons-deepforest",
        "label": "Tara Icons Deepforest",
        "path": "./themes/tara-icons-deepforest.json"
      },
      {
        "id": "tara-icons-graphene",
        "label": "Tara Icons Graphene",
        "path": "./themes/tara-icons-graphene.json"
      },
      {
        "id": "tara-icons-ocean",
        "label": "Tara Icons Ocean",
        "path": "./themes/tara-icons-ocean.json"
      },
      {
        "id": "tara-icons-palenight",
        "label": "Tara Icons Palenight",
        "path": "./themes/tara-icons-palenight.json"
      },
      {
        "id": "tara-icons-teal",
        "label": "Tara Icons Teal",
        "path": "./themes/tara-icons-teal.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "echo \"No compilation needed\"",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.2.0"
  }
}